{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "assets": [
            { "include": "templates/**/*", "watchAssets": true, "outDir": "dist/src" },
            { "include": "public/**/*", "watchAssets": true, "outDir": "dist/src" }
        ],
        "watchAssets": true
    },
    "deleteOutDir": true
}
